datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Item {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Float
  category    String?
  imageUrl    String?
  createdAt   DateTime @default(now())
}